<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <title>Tank Mission Control</title>
    <link href="style/style.css" rel="stylesheet" type="text/css"/>
  </head>
  <body>

    <h1>Tank Mission Control</h1>

    <div id="webcams">
      <div id="webcam0">
        <b>Webcam 0</b>
        <div class="webcam"><noscript><img src="/?action=snapshot" /></noscript></div>
      </div>
      <div id="webcam1">
        <b>Webcam 1</b>
        <div class="webcam"><noscript><img src="/?action=snapshot" /></noscript></div>
      </div>
    </div>

    <div id="controls">
      <div id="movement-control">
        <b>Movement control</b>
        <br />
        <img src="img/dpad.jpg" alt="dpad" usemap="#movementmap" />
        <map name="movementmap">
          <area shape="poly" coords="0,0,90,90,210,90,300,0,0,0" href="?forward" alt="Forward"/>
          <area shape="poly" coords="300,0,300,300,210,210,210,90,300,0" href="?right" alt="Right"/>
          <area shape="poly" coords="0,300,90,210,210,210,300,300,0,300" href="?back" alt="Back"/>
          <area shape="poly" coords="0,0,0,300,90,210,90,90,0,0" href="?left" alt="Left"/>
          <area shape="poly" coords="90,90,210,90,210,210,90,210,90,90" href="?stop" alt="Stop"/>
        </map>
      </div>
      <div id="action-control">
        <b>Action control</b>
        <br />
        <img src="img/dpad.jpg" alt="dpad" usemap="#actionmap" />
        <map name="actionmap">
          <area shape="poly" coords="0,0,90,90,210,90,300,0,0,0" href="?up" alt="Up"/>
          <area shape="poly" coords="300,0,300,300,210,210,210,90,300,0" href="?clockwise" alt="Clockwise"/>
          <area shape="poly" coords="0,300,90,210,210,210,300,300,0,300" href="?down" alt="Down"/>
          <area shape="poly" coords="0,0,0,300,90,210,90,90,0,0" href="?anticlockwise" alt="Anti-Clockwise"/>
          <area shape="poly" coords="90,90,210,90,210,210,90,210,90,90" href="?fire" alt="Fire"/>
        </map>
      </div>
    </div>

    <script type="text/javascript" src="js/webcams.js"></script>

  </body>
</html>
